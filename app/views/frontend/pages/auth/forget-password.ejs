<div class="signup-form">
        <form action="#" method="post">
            <h2>Forget Password</h2>
            <p class="hint-text">Forget your password</p>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            Nhập username
                        </div>
                    </div>
                    <input type="text" class="form-control" name="username" placeholder="Username" required="required">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            Nhập email
                        </div>
                    </div>
                    <input type="email" class="form-control input-lg" name="email" placeholder="Email Address"
                        required="required">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Gửi</button>
            </div>
        </form>
    </div>