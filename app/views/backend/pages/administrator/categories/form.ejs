<% 
  const collection = 'categories';
  const linkPrefix = systemConfig.prefixAdministrator + `/${collection}/`;
%>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Biểu mẫu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                <li>Tên category: không được rỗng</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="<%= linkPrefix %>save/" method="POST">
                            <div class="form-group">
                                <label>Tên category</label>
                                <input class="form-control" name="name" id="name_category" value="">
                            </div>

                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select name="status" class="form-control">
                                    <option value="novalue">Chọn trạng thái</option>
                                    <option value="active">
                                        Hoạt động</option>
                                    <option value="inactive">
                                        Không hoạt động</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Hoàn tất </button>
                            <a type="button" href="<%= linkPrefix %>" class="btn btn-default">Hủy bỏ</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>