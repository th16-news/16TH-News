<% include ./../../helpers/status %>
<% include ./../../helpers/pagination %>
<% include ./../../helpers/article-type %>
<% include ./../../helpers/image %>

<% 
  const collection = 'articles';
  const linkPrefix = systemConfig.prefixWriter + `/${collection}/`;
  const position = 'Phóng viên';
  const folderUpload = 'uploads/articles/';
%>


<% include ./../../elements/notify %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Tìm kiếm & Lọc
                <a href="admin123/item">
                    <span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
                </a>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="status-list col-sm-6 pl0">

                        <a class="btn m-b-sm btn-success btn-sm" href="admin123/item/all">
                            TẤT CẢ (4)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/inactive">
                            ĐÃ XUẤT BẢN (0)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/active">
                            ĐÃ ĐƯỢC DUYỆT (4)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/inactive">
                            CHƯA ĐƯỢC DUYỆT (0)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/active">
                            BỊ TỪ CHỐI (4)
                        </a>

                    </div>
                    <div class="col-sm-5">
                        <form action="admin123/item/all" method="GET">
                            <div class="input-group">
                                <input type="text" class="form-control" name="search" placeholder="Tìm kiếm..."
                                    value="">
                                <input type="hidden" value="all">

                                <span class="input-group-btn">
                                    <button class="btn btn-info" type="submit">Tìm kiếm</button>
                                </span>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="button"><a href="admin123/group/all">Dọn
                                            dẹp</a></button>
                                </span>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">

        <div class="panel panel-info">
            <div class="panel-heading">
                Danh sách bài viết
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
                    <div class="zcontrols">
                        <div class="pull-right">
                            <a href="<%= linkPrefix %>form" class="btn btn-warning btn-addNew">Thêm Mới</a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tiêu đề</th>
                                    <th>Ảnh bìa</th>
                                    <th>Chuyên mục</th>
                                    <th>Loại bài viết</th>
                                    <th>Trạng thái</th>
                                    <th>Lý do từ chối</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data.length > 0) { 
                                    data.forEach( (item, index) => { %>
                                <tr>
                                    <td>
                                        <%= (params.pagination.currentPage-1)*(params.pagination.totalItemsPerPage) + index + 1 %>
                                    </td>
                                    <td>
                                        <a href=""><%= item.name %></a>
                                    </td>
                                    <td>
                                        <%- imageHelper(folderUpload, item.thumb, item.name) %>
                                    </td>
                                    <td>
                                        <%= item.category.name %>
                                    </td>
                                    <td>
                                        <%- articleTypeHelper(linkPrefix, item.type, item.id, position) %>
                                    </td>
                                    <td>
                                        <%- statusHelper(linkPrefix, item.status, item.id, collection, position) %>
                                    </td>
                                    <td>
                                        <%= item.refuse_reason %>
                                    </td>
                                    <td>
                                        <a href="<%= linkPrefix %>form/<%= item.id %>" type="button"
                                            class="btn btn-warning btn-sm">Sửa</a>
                                        <a href="<%= linkPrefix %>delete/<%= item.id %>" type="button"
                                            class="btn btn-danger btn-sm btn-delete">Xóa</a>
                                    </td>
                                </tr>
                                <% });
                                } else { %>
                                <tr>
                                    <td colspan="9">
                                        <h3>Không có dữ liệu</h3>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <%- paginationHelper(params.pagination, linkPrefix, params.currentStatus, params.keyword) %>
    </div>
</div>