<% include ./../../helpers/article-type %>
<% include ./../../helpers/status %>
<% include ./../../helpers/pagination %>
<%
    const collection = 'articles';
    const linkPrefix = systemConfig.prefixEditor + `/${collection}/`;
    const position = 'Biên tập viên';
%>

<div class="alert alert-success" role="alert">

    <span class="close-btn">&times;</span> Thay đổi Trạng thái thành công

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Tìm kiếm & Lọc
                <a href="admin123/item">
                    <span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
                </a>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="status-list col-sm-6 pl0">

                        <a class="btn m-b-sm btn-success btn-sm" href="admin123/item/all">
                            TẤT CẢ (4)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/inactive">
                            ĐÃ XUẤT BẢN (0)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/active">
                            ĐÃ ĐƯỢC DUYỆT (4)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/inactive">
                            CHƯA ĐƯỢC DUYỆT (0)
                        </a>

                        <a class="btn m-b-sm btn-default btn-sm" href="admin123/item/active">
                            BỊ TỪ CHỐI (4)
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <form action="admin123/item/all" method="GET">
                            <div class="input-group">
                                <input type="text" class="form-control" name="search" placeholder="Tìm kiếm..."
                                    value="">
                                <input type="hidden" value="all">

                                <span class="input-group-btn">
                                    <button class="btn btn-info" type="submit">Tìm kiếm</button>
                                </span>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="button"><a href="admin123/group/all">Dọn
                                            dẹp</a></button>
                                </span>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">

        <div class="panel panel-info">
            <div class="panel-heading">
                Danh sách bài viết
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tiêu đề</th>
                                    <th>Ảnh bìa</th>
                                    <th>Loại bài viết</th>
                                    <th>Trạng thái</th>
                                    <th>Tên phóng viên</th>
                                    <th>Thời điểm xuất bản</th>
                                    <th>Lý do từ chối</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data.length > 0) {
                                    data.forEach( (item, index) => { %>
                                        <tr>
                                            <td>
                                                <%= (params.pagination.currentPage-1)*(params.pagination.totalItemsPerPage) + index + 1 %>
                                            </td>
                                            <td>
                                                <a href=""><%= item.name %></a>
                                            </td>
                                            <td>
                                                <img id="" src="#" alt="" />
                                            </td>
                                            <td>
                                                <%- articleTypeHelper(linkPrefix, item.type, item.id, position) %>
                                            </td>
                                            <td>
                                                <%- statusHelper(linkPrefix, item.status, item.id, collection, position) %>
                                            </td>
                                            <td>
                                                <%= item.created.user_name %>
                                            </td>
                                            <td>
                                                <%= item.expected_publish_time %>
                                            </td>
                                            <td>
                                                <%= item.refuse_reason %>
                                            </td>
                                            <td>
                                                <a href="<%= linkPrefix %>form/<%= item.id %>" type="button"
                                                    class="btn btn-warning btn-sm">Duyệt</a>
                                                <a href="<%= linkPrefix %>form/<%= item.id %>" type="button"
                                                    class="btn btn-danger btn-sm btn-warning">Từ
                                                    chối</a>
                                            </td>
                                        </tr>
                                        <% });
                                    } else { %>
                                        <tr><td colspan="9"><h3>Không có dữ liệu</h3></td></tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        
            <%- paginationHelper(params.pagination, linkPrefix, params.currentStatus, params.keyword) %>
        
    </div>
</div>