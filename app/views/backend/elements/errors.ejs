<% if (errors) { %>
<div class="row">
    <div class="col-lg-6">
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach((error) => { 
                    var strWord = '';
                    switch(error.param) {
                        case 'name':
                            if (pageTitle == 'Thêm mới chuyên mục') {
                                strWord = 'Chuyên mục';
                            } else if (pageTitle == 'Thêm mới tag') {
                                strWord = 'Tag';
                            } else {
                                strWord = 'Tiêu đề';
                            }
                            break;
                        case 'thumb':
                            strWord = 'Ảnh bìa';
                            break;
                        case 'category_id':
                            strWord = 'Chuyên mục';
                            break;
                        case 'type':
                            strWord = 'Loại bài viết';
                            break;
                        case 'summary':
                            strWord = 'Tóm tắt';
                            break;
                        case 'content':
                            strWord = 'Nội dung';
                            break;
                        case 'expected_publish_time':
                            strWord = 'Thời điểm xuất bản';
                            break;
                        case 'refuse_reason':
                            strWord = 'Lý do từ chối';
                            break;
                        case 'status':
                            strWord = 'Trạng thái';
                            break;
                        default:
                    } %>
                
                <li><b><%= strWord %></b>: <%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<% } %>