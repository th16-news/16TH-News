<% 
    filterStatusHelper = (linkPrefix, statusFilter, keyword, is_position = null) => {
        let xhtmlResult = '';
        statusFilter.forEach((item) => { 
            let link = '';
            if (is_position == true) {
                link = linkPrefix + "position/" + item.value;
            } else {
                link = linkPrefix + "status/" + item.value;
            }
            
            
            if (keyword !== '' && keyword !== undefined) {
                link += "?keyword=" + keyword;
            }
            xhtmlResult += `
            <a class="btn m-b-sm btn-${item.class} btn-sm" href="${link}">
                ${item.name.toUpperCase() + " (" + item.count + ")" }
            </a>
            `;
        });
        return xhtmlResult;
    } 
%>